<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LocalisationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/localisation_consigne"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="50dp"></TextView>

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/eseo_red"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"></TextView>

    <Button
        android:layout_marginHorizontal="30dp"
        android:id="@+id/btn_localisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="70dp"
        android:text="@string/localisation_btn_action"
        ></Button>

    <TextView
        android:id="@+id/text_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginVertical="30dp"
        android:textColor="@color/eseo_red"
        android:textStyle="bold"></TextView>


</LinearLayout>